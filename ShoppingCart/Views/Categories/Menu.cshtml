@model List<ShoppingCart.ViewModels.CategoryViewModel>

@{
    var selectCategoryId = ViewBag.SelectCategoryId;
}

<div class="list-group">
    @foreach (var category in Model)
    {
        <a href="@Url.Action("Index", "Books", new {categoryId = category.Id})"
           class="list-group-item @(category.Id == selectCategoryId?"active":"")">@category.Name</a>
    }
</div>
